{
    "name": "redaxo-adapter",
    "version": "0.0.30",
    "description": "An adapter for REDAXO CMS that connects to the graphql Addon",
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
        "prepack": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/kreatifIT/redaxo-adapter.git"
    },
    "keywords": [
        "redaxo",
        "cms",
        "headless",
        "graphql",
        "adapter"
    ],
    "author": "Kreatif GmbH",
    "license": "ISC",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/cjs/index.d.ts",
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/kreatifIT/redaxo-adapter/issues"
    },
    "homepage": "https://github.com/kreatifIT/redaxo-adapter#readme",
    "devDependencies": {
        "@types/node": "^20.1.2",
        "prettier": "^2.8.8",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "graphql-tag": "^2.12.6"
    }
}
